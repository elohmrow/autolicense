<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Puppy Crawl//DTD Check Configuration 1.2//EN" "http://www.puppycrawl.com/dtds/configuration_1_2.dtd">
<module name="Checker">

    <!-- checks applied on all sources -->
    <module name="RegexpHeader">
        <!-- The "Regexp" check could work better with multi-line checks, 
            but does not support a regex loaded from an external file. We vaguely tried 
            to implement our own check, without success. -->
        <property name="headerFile" value="${checkstyle.header.file}" />
        <!-- Crude hack so that the first line of the headerFile can be repeated 
            - this allows for the "ignored" header regex -->
        <property name="multiLines" value="1" />
        <!-- If we want to apply this check on other files than .java, we'll 
            need to use multiple RegexpHeader and a checkstyle-checker.properties per 
            licensing type to point at the right header templates (per file type) instead 
            of the checkstyle.header.file and <headerLocation> in pom.xml -->
        <property name="fileExtensions" value="java" />
    </module>
    
    <module name="FileTabCharacter" />

    <!-- checks applied on Java sources -->
    <module name="TreeWalker">
        <module name="JavadocType">
            <property name="scope" value="package" />
        </module>

        <module name="AvoidStarImport">
            <property name="allowStaticMemberImports" value="true" />
        </module>
        <module name="RedundantImport" />
        <module name="UnusedImports" />
    </module>
</module>